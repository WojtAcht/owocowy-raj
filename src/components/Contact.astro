---
const hours = [
  { day: "Poniedziałek", time: "Nieczynne", closed: true },
  { day: "Wtorek", time: "07:30 – 17:00", closed: false },
  { day: "Środa", time: "07:30 – 17:00", closed: false },
  { day: "Czwartek", time: "07:30 – 17:00", closed: false },
  { day: "Piątek", time: "07:30 – 17:00", closed: false },
  { day: "Sobota", time: "07:30 – 13:00", closed: false },
  { day: "Niedziela", time: "Nieczynne", closed: true },
];
---

<section id="kontakt" class="relative py-24 md:py-32 bg-cream-dark overflow-hidden">
  <!-- Decorative -->
  <div class="absolute top-0 left-1/2 w-96 h-96 bg-green-light/5 rounded-full blur-3xl -translate-x-1/2"></div>
  <div class="absolute bottom-10 right-0 w-72 h-72 bg-orange/5 rounded-full blur-3xl"></div>

  <div class="relative max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <span class="reveal inline-block text-orange text-sm tracking-[0.2em] uppercase font-semibold mb-4">Zapraszamy</span>
      <h2 class="reveal reveal-delay-1 font-heading font-black text-4xl md:text-5xl text-green-dark mb-6 leading-tight">
        Kontakt i <span class="italic text-green-mid">godziny otwarcia</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <!-- Kolumna 1: Dane kontaktowe -->
      <div class="reveal reveal-delay-1">
        <div class="relative h-full">
          <div class="absolute -inset-2 bg-gradient-to-br from-green-light/10 to-orange/5 rounded-[2rem] blur-xl"></div>
          <div class="relative bg-white/70 backdrop-blur-sm rounded-3xl p-8 border border-white/50 h-full">
            <h3 class="font-heading font-bold text-xl text-green-dark mb-7">Dane kontaktowe</h3>

            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start gap-4 group">
                <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-green-light/15 to-green-light/5 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-5 h-5 text-green-mid" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-green-dark mb-1 text-sm">Adres</p>
                  <p class="text-green-dark/65 leading-relaxed text-sm">ul. Ks. Piotra Ściegiennego 90<br/>40-111 Katowice</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4 group">
                <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-orange/10 to-orange/5 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-5 h-5 text-orange" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-green-dark mb-1 text-sm">Telefon</p>
                  <p class="text-green-dark/65 text-sm">Do uzupełnienia</p>
                </div>
              </div>

              <!-- Facebook -->
              <div class="flex items-start gap-4 group">
                <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-green-mid/10 to-green-mid/5 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-5 h-5 text-green-mid" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-green-dark mb-1 text-sm">Facebook</p>
                  <a
                    href="https://www.facebook.com/OwocowyRajUAni"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-green-mid hover:text-orange transition-colors font-medium text-sm"
                  >
                    facebook.com/OwocowyRajUAni
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Kolumna 2: Godziny otwarcia -->
      <div class="reveal reveal-delay-2">
        <div class="relative h-full">
          <div class="absolute -inset-2 bg-gradient-to-br from-green-light/10 to-orange/5 rounded-[2rem] blur-xl"></div>
          <div class="relative bg-white/70 backdrop-blur-sm rounded-3xl overflow-hidden border border-white/50 h-full">
            <div class="p-8 pb-0">
              <h3 class="font-heading font-bold text-xl text-green-dark mb-5">Godziny otwarcia</h3>
            </div>
            <div>
              {hours.map((item, i) => (
                <div class={`flex items-center justify-between px-8 py-3.5 transition-colors hover:bg-green-light/5 ${i < hours.length - 1 ? "border-b border-green-light/10" : ""} ${item.closed ? "text-green-dark/35" : "text-green-dark"}`}>
                  <span class={`font-semibold text-sm ${item.closed ? "" : "text-green-dark"}`}>{item.day}</span>
                  <div class="flex items-center gap-2">
                    {!item.closed && (
                      <span class="w-1.5 h-1.5 bg-green-light rounded-full animate-pulse-soft"></span>
                    )}
                    <span class={`text-sm ${item.closed ? "italic text-green-dark/40 font-medium" : "font-bold text-green-mid tracking-wide"}`}>
                      {item.time}
                    </span>
                    {item.note && <span class="text-[10px] text-green-dark/30">{item.note}</span>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Kolumna 3: Mapa -->
      <div class="reveal reveal-delay-3">
        <div class="relative h-full">
          <div class="absolute -inset-2 bg-gradient-to-br from-green-light/10 to-orange/5 rounded-[2rem] blur-xl"></div>
          <div class="relative rounded-3xl overflow-hidden shadow-lg h-full min-h-[400px] border border-white/30">
            <iframe
              src="https://www.google.com/maps?q=50.27682936593234,19.00830835103989&z=17&output=embed"
              width="100%"
              height="100%"
              style="border:0; min-height: 400px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Mapa - Owocowy Raj u Ani, ul. Ściegiennego 90, Katowice"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
