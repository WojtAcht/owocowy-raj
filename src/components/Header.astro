---
const navLinks = [
  { label: "O nas", href: "#o-nas" },
  { label: "Oferta", href: "#oferta" },
  { label: "Galeria", href: "#galeria" },
  { label: "Współpraca", href: "#wspolpraca" },
  { label: "Godziny", href: "#godziny" },
  { label: "Kontakt", href: "#kontakt" },
];
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 group">
      <div class="relative">
        <div class="w-10 h-10 bg-orange rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-sm shadow-orange/10">
          <svg class="w-5 h-5 text-cream" viewBox="0 0 32 32" fill="none">
            <circle cx="16" cy="18" r="12" fill="currentColor" opacity="0.9"/>
            <path d="M16 6 C14 2, 18 0, 20 4" stroke="#52b788" stroke-width="2" fill="none"/>
            <ellipse cx="18" cy="5" rx="4" ry="2.5" fill="#52b788" transform="rotate(-20 18 5)"/>
          </svg>
        </div>
        <div class="absolute -inset-0.5 bg-orange/10 rounded-full blur-sm group-hover:bg-orange/15 transition-colors -z-10"></div>
      </div>
      <div class="flex flex-col">
        <span class="font-heading font-bold text-lg leading-tight text-cream">Owocowy Raj</span>
        <span class="text-[10px] tracking-[0.2em] uppercase text-cream/60 font-medium">u Ani</span>
      </div>
    </a>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2.5 rounded-xl hover:bg-white/10 transition-colors"
      aria-label="Menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6 text-cream" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path id="menu-icon" stroke-linecap="round" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <ul class="hidden md:flex items-center gap-1">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="relative px-4 py-2 text-sm font-medium text-cream/80 hover:text-cream transition-colors rounded-full hover:bg-white/10"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden backdrop-blur-xl bg-green-dark/95 border-t border-white/10">
    <ul class="flex flex-col px-6 py-4 gap-1">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="block py-3 px-4 rounded-xl hover:bg-white/10 transition-colors text-sm font-medium text-cream/90"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const header = document.getElementById("main-header");
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  // Scroll effect
  let lastScroll = 0;
  window.addEventListener("scroll", () => {
    const scrollY = window.scrollY;
    if (scrollY > 80) {
      header?.classList.add("backdrop-blur-xl", "bg-green-dark/90", "shadow-lg", "shadow-green-dark/10");
      header?.classList.remove("py-2");
    } else {
      header?.classList.remove("backdrop-blur-xl", "bg-green-dark/90", "shadow-lg", "shadow-green-dark/10");
    }
    lastScroll = scrollY;
  });

  // Mobile menu
  btn?.addEventListener("click", () => {
    const expanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", String(!expanded));
    menu?.classList.toggle("hidden");
  });
  menu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      menu?.classList.add("hidden");
      btn?.setAttribute("aria-expanded", "false");
    });
  });
</script>
